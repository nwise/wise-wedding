<%= content_tag :table, :class => "table table-striped table-bordered" do %>
  <thead>
    <%= content_tag :tr do %>
      <%= content_tag :th, 'Click a size to insert image at cursor' %>
    <% end %>
  </thead>
  <tbody>
    <tr><td>
    <% @images.each do |image| %>
    <div class='image-list-item'>
      <span class='image-item-wrap'><%= image_tag image.image.thumb.url, :class => 'image-item', :id => dom_id(image) %></span><br>
      &nbsp;<span class="insertable-image" data-url=<%= image.image.thumb %>>S</span>&nbsp;
			<span class="insertable-image" data-url=<%= image.image.medium %>>M</span>&nbsp;
			<span class="insertable-image" data-url=<%= image.image.large %>>L</span>
		</div>
    <% end %>
    </td></tr>
  </tbody>
<% end %>