<div class='row-fluid'>
  <div class='span9'>
<%= form_for([:admin, @page], :html => {:class =>'form-horizontal'}) do |f| %>
  <%= render 'shared/error_messages', :target => @page %>

  <% title_error = 'error' if @page.errors.include?(:title) %>
  <%= content_tag :div, :class => "control-group #{title_error}" do %>
    <%= label_tag :title, "Title", :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%= f.text_field :title, :class => 'input-xlarge' %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => 'control-group' do %>
    <%= f.label :keywords, :class => 'control-label'  %>
    <%= content_tag :div, :class => 'controls' do %>
      <%= f.text_field :keywords, :class => 'input-xlarge' %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => 'control-group' do %>
    <%= f.label :description, :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%= f.text_field :description, :class => 'input-xlarge' %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => 'control-group' do %>  
    <%= f.label :url_tag, :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%= content_tag :div, :class => 'input-prepend' do %>
        <%= content_tag(:span, "#{request.protocol + request.host_with_port}/", :class => 'add-on') %><%= f.text_field :url_tag, :class => 'span3', :size => 16 %>
      <% end %>
    <% end %>
  <% end %>

  <% content_error = 'error' if @page.errors.include?(:content) %>
  <%= content_tag :div, :class => "control-group #{content_error}" do %>
    <%= label_tag :content, "Content", :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%#= f.text_area(:content, :cols => 40, :rows => 15 )%>
      <%= cktext_area_tag(:content, @page.content, :input_html => {:cols => 10, :rows => 20, :name => 'page[content]'}, :toolbar => 'Full') %>
      <%= content_tag :span, :class => 'help-inline error' do %>
        <%= @page.errors[:content].join(', ')	 %>
     <% end if @page.errors.include?(:content) %>
    <% end %>
  <% end %>

  <%= content_tag :div, :class => 'control-group' do %>
    <%= f.label :published, :class => 'control-label' %>
    <%= content_tag :div, :class => 'controls' do %>
      <%=  f.check_box :published %>
    <% end %>
  <% end %>
  <%= content_tag :div, :class => 'form-actions' do %>
    <%= f.submit submit_text, :class => "btn-primary" %>
    <%= link_to 'Cancel', admin_pages_path, :class => 'btn' %>
  <% end %>
<% end %>
  </div>
  <div class='span3 image-sidebar'>
    <div id='image-list'>
      <%= render :partial => 'admin/images/list' %>
    </div>
    <%= content_tag :table, :class => "table table-striped table-bordered" do %>
    <tr>
      <th>Upload a new Image</th>
    </tr>
    <tr>
      <td><%= render :partial => 'admin/images/form' %></td>
    </tr>
    <% end %>
  </div>
</div>
