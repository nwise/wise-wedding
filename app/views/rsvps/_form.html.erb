<div class='row-fluid' style='margin-top:30px'>
  <div class='span9'>

    <%= form_for(@rsvp, :html => {:class => 'form-horizontal'}) do |f| %>
      <%= render 'shared/error_messages', :target => @rsvp %>
      <% f_name_error = 'warning' if @rsvp.errors.include?(:first_name) %>
      <%= content_tag :div, :class => "control-group #{f_name_error}" do %>
        <%= label_tag :first_name, "first name", :class => 'control-label' %>
        <%= content_tag :div, :class => 'controls' do %>
          <%= f.text_field :first_name, :class => 'input-xlarge' %>
        <% end %>
      <% end %>

      <% l_name_error = 'warning' if @rsvp.errors.include?(:last_name) %>
      <%= content_tag :div, :class => "control-group #{l_name_error}" do %>
        <%= label_tag :last_name, "last name", :class => 'control-label' %>
        <%= content_tag :div, :class => 'controls' do %>
          <%= f.text_field :last_name, :class => 'input-xlarge' %>
        <% end %>
      <% end %>

      <%= content_tag :div, :class => 'control-group' do %>
        <%= f.label :will_attend, "attending?", :class => 'control-label' %>
        <%= content_tag :div, :class => 'controls' do %>
          <%= f.select :will_attend, {:yes => true, :no => false}, :class => 'input' %>
        <% end %>
      <% end %>

      <%= content_tag :div, :class => 'control-group' do %>
        <%= f.label :number_to_rsvp, "total number of guests", :class => 'control-label' %>
        <%= content_tag :div, :class => 'controls' do %>
          <%= f.select :number_to_rsvp, [1,2,3,4,5,6], :class => 'input' %>
        <% end %>
      <% end %>

      <%= content_tag :div, :class => 'control-group' do %>
        <%= f.label :email_address, "email address (optional)", :class => 'control-label' %>
        <%= content_tag :div, :class => 'controls' do %>
          <%= f.text_field :email_address, :class => 'input-xlarge' %>
        <% end %>
      <% end %>
    
      <div class="control-group">
        <div class='controls'>
          <%= f.submit "Submit RSVP", :class => "btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
